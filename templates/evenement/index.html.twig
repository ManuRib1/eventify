{% extends 'base.html.twig' %}

{% block title %}Liste des événements{% endblock %}

{% block body %}
<div class="row">
    <div class="col-md-12">
        <h1 class="mb-4">
            <i class="bi bi-calendar-event"></i> Événements disponibles
        </h1>

        {% if evenements is empty %}
            <div class="alert alert-info">
                <i class="bi bi-info-circle"></i> Aucun événement disponible pour le moment.
            </div>
        {% else %}
            <div class="row">
                {% for evenement in evenements %}
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body">
                            <h5 class="card-title">{{ evenement.titre }}</h5>
                            <p class="card-text text-muted">
                                <i class="bi bi-calendar3"></i> {{ evenement.date|date('d/m/Y à H:i') }}
                            </p>
                            {% if evenement.lieu %}
                            <p class="card-text text-muted">
                                <i class="bi bi-geo-alt"></i> {{ evenement.lieu }}
                            </p>
                            {% endif %}
                            
                            {% if evenement.description %}
                            <p class="card-text">{{ evenement.description|slice(0, 100) }}...</p>
                            {% endif %}

                            <div class="mb-2">
                                <span class="badge bg-info">
                                    {{ evenement.avisModeres|length }} avis
                                </span>
                            </div>
                        </div>
                        <div class="card-footer bg-transparent">
                            <a href="{{ path('app_evenement_show', {'id': evenement.id}) }}" 
                               class="btn btn-primary btn-sm w-100">
                                <i class="bi bi-eye"></i> Voir détails
                            </a>
                        </div>
                    </div>
                </div>
                {% endfor %}
            </div>
        {% endif %}
    </div>
</div>
{% endblock %}