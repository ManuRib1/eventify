{% extends 'base.html.twig' %}

{% block title %}Modifier mon avis{% endblock %}

{% block body %}
<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h4 class="mb-0">
                    <i class="bi bi-pencil"></i> Modifier mon avis
                </h4>
            </div>
            <div class="card-body">
                <p class="text-muted">
                    <strong>Événement :</strong> {{ avis.evenement.titre }}
                </p>

                {{ form_start(form) }}
                    <div class="mb-3">
                        {{ form_label(form.note) }}
                        {{ form_widget(form.note, {'attr': {'class': 'form-select'}}) }}
                        {{ form_errors(form.note) }}
                    </div>

                    <div class="mb-3">
                        {{ form_label(form.commentaire) }}
                        {{ form_widget(form.commentaire, {'attr': {'class': 'form-control', 'rows': 5}}) }}
                        {{ form_errors(form.commentaire) }}
                    </div>

                    <div class="alert alert-info">
                        <i class="bi bi-info-circle"></i> 
                        Après modification, votre avis sera de nouveau soumis à modération.
                    </div>

                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-check-circle"></i> Enregistrer les modifications
                        </button>
                        <a href="{{ path('app_evenement_show', {'id': avis.evenement.id}) }}" 
                           class="btn btn-secondary">
                            <i class="bi bi-x-circle"></i> Annuler
                        </a>
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
</div>
{% endblock %}