{% extends 'base.html.twig' %}

{% block title %}Assigner des Responsables{% endblock %}

{% block body %}
<div class="container py-5">
    <h1 class="mb-4">
        <i class="bi bi-people"></i> Assigner des Responsables aux Événements
    </h1>

    <div class="row">
        {% for evenement in evenements %}
        <div class="col-md-6 mb-4">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">{{ evenement.titre }}</h5>
                    <small>{{ evenement.date|date('d/m/Y') }} - {{ evenement.lieu }}</small>
                </div>
                <div class="card-body">
                    <h6>Responsables actuels :</h6>
                    {% if evenement.responsables is empty %}
                        <p class="text-muted">Aucun responsable assigné</p>
                    {% else %}
                        <ul class="list-group mb-3">
                            {% for resp in evenement.responsables %}
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                <span>
                                    <i class="bi bi-person-badge"></i>
                                    {{ resp.prenom }} {{ resp.nom }}
                                </span>
                                <a href="{{ path('admin_assign_remove', {evenementId: evenement.id, responsableId: resp.id}) }}" 
                                   class="btn btn-sm btn-danger"
                                   onclick="return confirm('Retirer ce responsable ?')">
                                    <i class="bi bi-x"></i>
                                </a>
                            </li>
                            {% endfor %}
                        </ul>
                    {% endif %}

                    <h6>Ajouter un responsable :</h6>
                    <div class="d-flex flex-wrap gap-2">
                        {% for resp in responsables %}
                            {% if not evenement.responsables.contains(resp) %}
                            <a href="{{ path('admin_assign_add', {evenementId: evenement.id, responsableId: resp.id}) }}" 
                               class="btn btn-sm btn-outline-success">
                                <i class="bi bi-plus-circle"></i> {{ resp.prenom }} {{ resp.nom }}
                            </a>
                            {% endif %}
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
        {% endfor %}
    </div>

    <div class="mt-4">
        <a href="{{ path('admin') }}" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Retour au dashboard
        </a>
    </div>
</div>
{% endblock %}